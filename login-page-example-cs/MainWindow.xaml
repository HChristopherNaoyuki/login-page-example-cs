<Window x:Class="login_page_example_cs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:login_page_example_cs"
        mc:Ignorable="d"
        Title="Chat Application" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Using a single grid with two pages that toggle visibility -->

        <!-- LOGIN PAGE -->
        <Grid x:Name="login_page" Background="#FFE8E8E8">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <!-- Application Title -->
                <TextBlock Text="Welcome to ChatApp" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Margin="0,0,0,30"
                           HorizontalAlignment="Center"/>

                <!-- Login Button -->
                <Button Content="Login" 
                        Height="40" 
                        Background="#FF0078D7" 
                        Foreground="White"
                        FontWeight="Bold"
                        Click="open_login"/>

                <!-- Status Message (hidden by default) -->
                <TextBlock x:Name="login_status" 
                           Margin="0,10,0,0"
                           Foreground="Red"
                           Visibility="Collapsed"/>
            </StackPanel>
        </Grid>

        <!-- CHAT PAGE -->
        <Grid x:Name="chats_page" Background="White" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#FF0078D7" Padding="10">
                <TextBlock x:Name="welcome_message" 
                           Text="Greetings!" 
                           FontSize="18" 
                           Foreground="White"
                           FontWeight="Bold"/>
            </Border>

            <!-- Chat Display Area -->
            <ScrollViewer Grid.Row="1" Padding="10">
                <StackPanel x:Name="chat_display">
                    <!-- Chat messages will be added here programmatically -->
                </StackPanel>
            </ScrollViewer>

            <!-- Input Area -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
                <TextBox x:Name="message_input" 
                         Width="300" 
                         Height="40" 
                         Margin="0,0,10,0"
                         KeyDown="OnMessageKeyDown"/>
                <Button Content="Send" 
                        Width="80" 
                        Height="40" 
                        Background="#FF0078D7"
                        Foreground="White"
                        Click="SendMessage"/>
                <Button Content="Logout" 
                        Width="80" 
                        Height="40" 
                        Margin="10,0,0,0"
                        Click="back"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>